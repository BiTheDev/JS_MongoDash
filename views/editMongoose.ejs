<body>
    <form action="/mongooses/<%= data[0]._id %>" method="POST">
        <p>Name: <input type="text" name="name" value="<%= data[0].name %>"></p>
        <p>Color: <input type="text" name="color" value="<%= data[0].color %>"></p>
        <p>Age: <input type="text" name="age" value="<%= data[0].age %>"></p>
        <button type="submit" class="btn btn-warning">Submit</button>
    </form>
    <a href="/"><button class="btn btn-primary">Home</button></a>
</body>
</html>